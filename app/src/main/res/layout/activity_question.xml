<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <LinearLayout
        android:id="@+id/ll_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btn_half"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:background="@drawable/button_help_valid"
            android:gravity="center"
            android:text="@string/btn_help5050"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imb_callRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_help_valid"
            android:src="@drawable/ic_call_white_50dp" />

        <ImageButton
            android:id="@+id/imb_audienceComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_help_valid"
            android:src="@drawable/ic_people_white_50dp" />

        <ImageButton
            android:id="@+id/imb_changeQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_help_valid"
            android:src="@drawable/ic_cached_white_50dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txv_time"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/ll_help"
        android:layout_marginTop="10dp"
        android:background="@drawable/textview_time"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv_money"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ll_help"
        android:layout_marginTop="10dp"
        android:background="@drawable/textview_money"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv_money"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/imv_logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/txv_questionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Câu hỏi số"
            android:textColor="@color/colorYellow"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txv_question"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:text="Nội dung câu hỏi "
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txv_answerA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/answer"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="A:"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txv_answerB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/answer"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:text="B:"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txv_answerC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/answer"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:text="C:"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txv_answerD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/answer"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:text="D:"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </LinearLayout>


</RelativeLayout>